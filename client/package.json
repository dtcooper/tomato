{
  "name": "tomato",
  "productName": "com.bmir.tomato",
  "version": "0.0.1-dev0",
  "description": "Tomato Radio Automation (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "rm -rf dist out",
    "dev": "NODE_ENV=development npm-run-all clean -p -r build dev:electron",
    "svelte-dev": "SVELTE_DEVTOOLS=1 npm run dev",
    "dev:electron": "wait-on -l dist/app.css dist/app.js dist/main.js http://localhost:3000/ && electron-forge start",
    "make": "NODE_ENV=production npm-run-all clean build make:forge",
    "package": "NODE_ENV=production npm-run-all clean build package:forge",
    "make:forge": "electron-forge make",
    "package:forge": "electron-forge package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/tomato.git"
  },
  "author": "David Cooper <david.cooper@burningman.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dtcooper/tomato/issues"
  },
  "homepage": "https://github.com/dtcooper/tomato#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.3",
    "@electron-forge/maker-deb": "^6.0.3",
    "@electron-forge/maker-zip": "^6.0.3",
    "@elgato-stream-deck/webhid": "^5.7.0",
    "autoprefixer": "^10.4.13",
    "browser-sync": "^2.27.10",
    "color": "^4.2.3",
    "daisyui": "^2.41.0",
    "dayjs": "^1.11.6",
    "download": "^8.0.0",
    "electron": "^21.2.3",
    "electron-releases": "^3.1171.0",
    "electron-window-state": "^5.0.3",
    "esbuild": "^0.15.14",
    "esbuild-svelte": "^0.7.3",
    "material-ui-colors": "^1.0.0",
    "md5-file": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "standard": "^17.0.0",
    "svelte": "^3.53.1",
    "svelte-devtools-standalone": "github:RedHatter/svelte-devtools-standalone",
    "svelte-local-storage-store": "^0.3.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.2.4",
    "wait-on": "^6.0.1"
  },
  "standard": {
    "ignore": [
      "dist/*.js"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "^/src$",
          "^/scripts$",
          "^/tailwind.config.js$"
        ],
        "executableName": "tomato",
        "icon": "assets/icons/tomato",
        "name": "Tomato"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "assets/icons/tomato.png",
              "productName": "Tomato Radio Automation"
            }
          }
        }
      ]
    }
  }
}
