{
  "name": "tomato",
  "productName": "com.bmir.tomato",
  "version": "0.0.1-dev",
  "description": "Tomato Radio Automation (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "common:build:js": "esbuild --bundle --platform=node --target=node16.16 --external:electron src/$SCRIPT_NAME.js --outfile=dist/$SCRIPT_NAME.js --sourcemap $ESBUILD_ARG",
    "common:css": "tailwindcss --input src/styles.css --output dist/styles.css $TAILWIND_ARG",
    "common:eleventy": "eleventy $ELEVENTY_ARG",
    "common:js": "npm-run-all -p common:js:*",
    "common:js:main": "SCRIPT_NAME=main npm run common:build:js",
    "common:js:script": "SCRIPT_NAME=script ESBUILD_ARG=\"$ESBUILD_ARG --format=esm\" npm run common:build:js",
    "clean": "rm -rf dist out",
    "build": "NODE_ENV=production ESBUILD_ARG=--minify TAILWIND_ARG=--minify ELEVENTY_ARG= npm-run-all clean -p common:*",
    "dev": "NODE_ENV=development ESBUILD_ARG=--watch TAILWIND_ARG=--watch ELEVENTY_ARG=--serve npm-run-all clean -p -r common:* dev:*",
    "dev:electron": "wait-on -l dist/styles.css dist/script.js dist/main.js http://localhost:8080/ && electron-forge start",
    "make": "npm run build && electron-forge make",
    "package": "npm run build && electron-forge package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/tomato.git"
  },
  "author": "David Cooper <david.cooper@burningman.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dtcooper/tomato/issues"
  },
  "homepage": "https://github.com/dtcooper/tomato#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@alpinejs/persist": "^3.10.3",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@elgato-stream-deck/webhid": "^5.6.0",
    "alpinejs": "^3.10.3",
    "daisyui": "^2.31.0",
    "download": "^8.0.0",
    "electron": "^21.1.0",
    "esbuild": "^0.15.10",
    "html-minifier": "^4.0.0",
    "material-ui-colors": "^1.0.0",
    "md5-file": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "standard": "^17.0.0",
    "tailwindcss": "^3.1.8",
    "wait-on": "^6.0.1"
  },
  "standard": {
    "ignore": [
      "dist/*.js",
      "!.eleventy.js"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "^/src$",
          "^/tailwind.config.js$",
          "^/.eleventy.js$"
        ],
        "executableName": "tomato",
        "icon": "dist/assets/icons/tomato",
        "name": "Tomato"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
