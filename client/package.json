{
  "name": "tomato",
  "productName": "Tomato Radio Automation",
  "version": "0.0.1-dev0",
  "description": "Tomato Radio Automation (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "clean": "rm -rf dist out",
    "dev": "NODE_ENV=development npm-run-all clean -p -r build dev:electron",
    "svelte-dev": "SVELTE_DEVTOOLS=1 npm run dev",
    "dev:electron": "npm-run-all dev:electron:wait dev:electron:run",
    "dev:electron:wait": "wait-on -l dist/app.css dist/app.js dist/main.js http://localhost:3000/",
    "dev:electron:run": "run-script-os",
    "dev:electron:run:linux": "./scripts/debian/start-tomato.sh",
    "dev:electron:run:default": "electron-forge start",
    "make": "NODE_ENV=production npm-run-all clean build make:forge",
    "package": "NODE_ENV=production npm-run-all clean build package:forge",
    "make:forge": "electron-forge make",
    "package:forge": "electron-forge package",
    "format": "prettier --write . ../server/constants.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/tomato.git"
  },
  "author": "David Cooper <david.cooper@burningman.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dtcooper/tomato/issues"
  },
  "homepage": "https://github.com/dtcooper/tomato#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-dmg": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@elgato-stream-deck/webhid": "^5.7.3",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "browser-sync": "^2.29.3",
    "color": "^4.2.3",
    "daisyui": "^3.3.1",
    "dayjs": "^1.11.9",
    "download": "^8.0.0",
    "electron": "^25.3.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "esbuild": "^0.18.15",
    "esbuild-svelte": "^0.7.4",
    "material-ui-colors": "^1.0.0",
    "md5-file": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-svelte": "^2.10.1",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "reconnecting-websocket": "^4.4.0",
    "run-script-os": "^1.1.6",
    "svelte": "^4.1.1",
    "svelte-devtools-standalone": "github:RedHatter/svelte-devtools-standalone",
    "svelte-local-storage-store": "^0.5.0",
    "svelte-preprocess": "^5.0.4",
    "tailwindcss": "^3.3.3",
    "wait-on": "^7.0.1"
  }
}
