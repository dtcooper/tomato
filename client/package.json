{
  "name": "tomato",
  "productName": "Tomato",
  "version": "0.0.1-dev0",
  "description": "Tomato Radio Automation (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "build": "node scripts/build.js",
    "distclean": "git clean -fxd .",
    "clean": "rm -rf dist out",
    "dev": "NODE_ENV=development npm-run-all clean -p -r build dev:electron",
    "prod": "NODE_ENV=production npm-run-all clean build dev:electron:run",
    "debug": "DEV_EXTRA_FORGE_FLAGS=--inspect-brk-electron npm run dev",
    "svelte-dev": "SVELTE_DEVTOOLS=1 npm run dev",
    "dev:electron": "npm-run-all dev:electron:wait dev:electron:run",
    "dev:electron:wait": "wait-on -l dist/app.css dist/app.js dist/main.js http://localhost:3000/",
    "dev:electron:run": "ELECTRON_DISABLE_SECURITY_WARNINGS=true run-script-os",
    "dev:electron:run:windows": "ELECTRON_ENABLE_LOGGING=true electron-forge start $DEV_EXTRA_FORGE_FLAGS",
    "dev:electron:run:linux": "ELECTRON_OZONE_PLATFORM_HINT=auto electron-forge start $DEV_EXTRA_FORGE_FLAGS",
    "dev:electron:run:default": "electron-forge start $DEV_EXTRA_FORGE_FLAGS",
    "make": "NODE_ENV=production npm-run-all clean build make:forge",
    "package": "NODE_ENV=production npm-run-all clean build package:forge",
    "make:forge": "electron-forge make",
    "package:forge": "electron-forge package",
    "format": "prettier --plugin prettier-plugin-organize-imports --plugin prettier-plugin-svelte --plugin prettier-plugin-tailwindcss --write . ../server/constants.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/tomato.git"
  },
  "author": "David Cooper <david.cooper@burningman.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dtcooper/tomato/issues"
  },
  "homepage": "https://dtcooper.github.io/tomato/",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-dmg": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@iconify/icons-carbon": "^1.2.20",
    "@iconify/icons-mdi": "^1.2.48",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "browser-sync": "^3.0.2",
    "color": "^4.2.3",
    "daisyui": "^4.12.10",
    "dayjs": "^1.11.12",
    "download": "^8.0.0",
    "electron": "^31.3.0",
    "electron-forge-maker-appimage": "github:duzda/electron-forge-maker-appimage",
    "electron-squirrel-startup": "^1.0.1",
    "electron-window-state": "^5.0.3",
    "esbuild": "^0.23.0",
    "esbuild-style-plugin": "^1.6.3",
    "esbuild-svelte": "^0.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "fs-extra": "^11.2.0",
    "material-ui-colors": "^1.0.0",
    "md5-file": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "reconnecting-websocket": "^4.4.0",
    "run-script-os": "^1.1.6",
    "svelte": "^4.2.18",
    "svelte-devtools-standalone": "github:RedHatter/svelte-devtools-standalone",
    "svelte-local-storage-store": "^0.6.4",
    "tailwindcss": "^3.4.7",
    "trap-focus-svelte": "^1.1.0",
    "uuid": "^10.0.0",
    "wait-on": "^7.2.0",
    "weak-ref-collections": "^1.2.4"
  }
}
