{
  "name": "tomato",
  "productName": "com.bmir.tomato",
  "version": "0.0.1-dev",
  "description": "Tomato Radio Automation (Desktop App)",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rm -rf dist out",
    "dev": "NODE_ENV=development ELECTRON_NODE_VERSION=16.15.0 npm-run-all clean -p dev:*",
    "dev:11ty": "eleventy --serve",
    "dev:css": "tailwindcss --input src/styles.css --output dist/styles.css --watch",
    "dev:electron": "npm-run-all dev:electron:wait dev:electron:forge",
    "dev:electron:wait": "wait-on -l dist/styles.css dist/script.js dist/main.js http://localhost:8080/",
    "dev:electron:forge": "electron-forge start",
    "dev:js-script": "esbuild --bundle --platform=node --target=node${ELECTRON_NODE_VERSION} --external:electron src/script.js --outfile=dist/script.js --sourcemap --watch",
    "dev:js-main": "esbuild --bundle --platform=node --target=node${ELECTRON_NODE_VERSION} --external:electron src/main.js --outfile=dist/main.js --sourcemap --watch",
    "build": "NODE_ENV=production ELECTRON_NODE_VERSION=16.15.0 npm-run-all clean -p build:*",
    "build:11ty": "eleventy",
    "build:css": "tailwindcss --input src/styles.css --output dist/styles.css --minify",
    "build:js-script": "esbuild --bundle --platform=node --target=node${ELECTRON_NODE_VERSION} --external:electron src/script.js --outfile=dist/script.js --sourcemap --minify",
    "build:js-main": "esbuild --bundle --platform=node --target=node${ELECTRON_NODE_VERSION} --external:electron src/main.js --outfile=dist/main.js --sourcemap --minify",
    "make": "npm-run-all build make:*",
    "make:forge": "run-script-os",
    "make:forge:darwin": "electron-forge make --arch universal",
    "make:forge:default": "electron-forge make",
    "package": "npm-run-all build package:*",
    "package:forge": "run-script-os",
    "package:forge:darwin": "electron-forge package --arch universal",
    "package:forge:default": "electron-forge package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dtcooper/tomato.git"
  },
  "author": "David Cooper <david.cooper@burningman.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dtcooper/tomato/issues"
  },
  "homepage": "https://github.com/dtcooper/tomato#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@alpinejs/persist": "^3.10.3",
    "@electron-forge/cli": "^6.0.0-beta.66",
    "@electron-forge/maker-deb": "^6.0.0-beta.66",
    "@electron-forge/maker-rpm": "^6.0.0-beta.66",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.66",
    "@electron-forge/maker-zip": "^6.0.0-beta.66",
    "alpinejs": "^3.10.3",
    "daisyui": "^2.31.0",
    "download": "^8.0.0",
    "electron": "^20.2.0",
    "esbuild": "^0.15.9",
    "html-minifier": "^4.0.0",
    "md5-file": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "run-script-os": "^1.1.6",
    "standard": "^17.0.0",
    "tailwindcss": "^3.1.8",
    "wait-on": "^6.0.1"
  },
  "standard": {
    "ignore": [
      "dist/*.js",
      "!.eleventy.js"
    ]
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "^/src$",
          "^/tailwind.config.js$",
          "^/.eleventy.js$"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "tomato"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
